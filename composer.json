{
    "name": "slm/locale",
    "description": "Automatic detection of locales for Zend Framework 2",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "zf2",
        "i18n",
        "locale"
    ],
    "homepage": "https://github.com/juriansluiman/SlmLocale",
    "authors": [
        {
            "name": "Jurian Sluiman",
            "email": "jurian@juriansluiman.nl",
            "homepage": "http://juriansluiman.nl"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-intl": "*",
        "container-interop/container-interop": "^1.1",
        "zendframework/zend-eventmanager": "^3",
        "zendframework/zend-http": "~2.5",
        "zendframework/zend-uri": "~2.5",
        "zendframework/zend-servicemanager": "^3",
        "zendframework/zend-stdlib": "^3"
    },
    "require-dev": {
        "zendframework/zend-console": "~2.5",
        "zendframework/zend-mvc": "^3",
        "phpunit/phpunit": "^5.0"
    },
    "suggest": {
        "zendframework/zend-mvc": "For using the router in the UriPath strategy"
    },
    "autoload": {
        "psr-0": {
            "SlmLocale": "src/",
            "SlmLocaleTest": "tests/"
        },
        "classmap": [
            "./Module.php"
        ]
    }
}
